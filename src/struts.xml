<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="customer" extends="struts-default" namespace="/customer">
        <!--customerAction!addCustomer.action 对应 name="customerAction!*"，通配符*addCustomer，
              method="{1}"里面的{1}就是代表addCustomer()方法,
              这个addCustomer()方法存在于 CustomerAction中
        -->
        <action name="customerAction!*" class="com.hlz.action.CustomerAction" method="{1}">
            <result name="addCustomer">/jsp/customer/add.jsp</result>
            <result name="findAllCustomer">/jsp/customer/list.jsp</result>
        </action>
    </package>
</struts>